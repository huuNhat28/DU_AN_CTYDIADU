@model WebHomeStay.Models.Phong

@{
    ViewData["Title"] = "Xóa phòng";
}

<h1>Xóa phòng</h1>

<h3>Bạn có muốn xóa phòng này không?</h3>
<div>
    <h4>Phòng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SoPhong)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoPhong)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdloaiPhongNavigation.TenLoaiPhong)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdloaiPhongNavigation.TenLoaiPhong)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MoTa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MoTa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HinhAnh)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HinhAnh)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MoTaNgan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MoTaNgan)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AnhNho)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.AnhNho))
            {
                <img src="~/uploads/@Model.AnhNho" alt="Ảnh nhỏ" class="img-fluid" style="max-width: 200px;" />
            }
            else
            {
                <span>Không có ảnh</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrangThai)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrangThai)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
