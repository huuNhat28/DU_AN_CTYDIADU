@model WebHomeStay.Models.Phong

@{
    ViewData["Title"] = "Chi tiết phòng";
}

<h1>Chi tiết phòng</h1>

<div>
    <h4>Phòng @Model.SoPhong</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Số phòng
        </dt>
        <dd class="col-sm-10">
            @Model.SoPhong
        </dd>
        <dt class="col-sm-2">
            Loại phòng
        </dt>
        <dd class="col-sm-10">
            @Model.IdloaiPhongNavigation?.TenLoaiPhong
        </dd>
        <dt class="col-sm-2">
            Giá (VNĐ/đêm)
        </dt>
        <dd class="col-sm-10">
            @(Model.Gia?.ToString("N0") ?? "Chưa xác định")
        </dd>
        <dt class="col-sm-2">
            Mô tả
        </dt>
        <dd class="col-sm-10">
            @Model.MoTa
        </dd>
        <dt class="col-sm-2">
            Mô tả ngắn
        </dt>
        <dd class="col-sm-10">
            @Model.MoTaNgan
        </dd>
        <dt class="col-sm-2">
            Hình ảnh
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.HinhAnh))
            {
                <img src="@Model.HinhAnh" alt="@Model.MoTa" style="width: 200px; height: auto;" />
            }
            else
            {
                <span>Chưa có ảnh</span>
            }
        </dd>
        <dt class="col-sm-2">
            Hình ảnh nhỏ
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.AnhNho))
            {
                <img src="~/uploads/@Model.AnhNho" alt="@Model.MoTaNgan" style="width: 100px; height: auto;" />
            }
            else
            {
                <span>Chưa có ảnh</span>
            }
        </dd>
        <dt class="col-sm-2">
            Trạng thái
        </dt>
        <dd class="col-sm-10">
            @(Model.TrangThai == true ? "Trống" : "Đã đặt")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>