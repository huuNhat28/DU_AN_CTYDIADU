@model WebHomeStay.Models.DatPhong

@{
    ViewData["Title"] = "Chi tiết phòng";
}

<h1>Chi tiết phòng</h1>

<div>
    <h4>Phòng @Model.IdphongNavigation.SoPhong</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Họ tên khách hàng
        </dt>
        <dd class="col-sm-10">
            @Model.IdtaiKhoanNavigation.HoTen
        </dd>
        <dt class="col-sm-2">
            Ngày đặt phòng
        </dt>
        <dd class="col-sm-10">
            @Model.NgayDatPhong
        </dd>
        <dt class="col-sm-2">
            Ngày trả phòng
        </dt>
        <dd class="col-sm-10">
            @Model.NgayTraPhong
        </dd>
        <dt class="col-sm-2">
            Trạng thái thanh toán
        </dt>
        <dd class="col-sm-10">
            @(Model.TrangThaiThanhToan == true ? "Đã thanh toán" : "Chưa thanh toán")
        </dd>
        <dt class="col-sm-2">
            Trạng thái đặt phòng
        </dt>
        <dd class="col-sm-10">
            @(Model.TrangThaiDatPhong == true ? "Đã đặt" : "Chưa đặt")
        </dd>
        <dt class="col-sm-2">
            Tổng tiền
        </dt>
        <dd class="col-sm-10">
            @Model.TongTien
        </dd>
       
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>