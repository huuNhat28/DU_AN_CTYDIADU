@model WebHomeStay.Models.KhuyenMai
@{
    ViewData["Title"] = "Sửa khuyến mãi" + Model.TenKhuyenMai;
}

<h2>@ViewData["Title"]</h2>

<!-- Form chỉnh sửa khuyến mãi -->
<form asp-action="Edit" method="post" class="row g-3">
    <div class="col-md-6">
        <label for="TenKhuyenMai" class="form-label">Tên khuyến mãi</label>
        <input type="text" id="TenKhuyenMai" name="TenKhuyenMai" class="form-control" value="@Model.TenKhuyenMai" />
        <span asp-validation-for="TenKhuyenMai" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label for="ThoiGian" class="form-label">Thời gian</label>
        <input type="date" id="ThoiGian" name="ThoiGian" class="form-control" value="@Model.ThoiGian?.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="ThoiGian" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label for="SoTienGiam" class="form-label">Số tiền giảm (VND)</label>
        <input type="number" id="SoTienGiam" name="SoTienGiam" class="form-control" value="@Model.SoTienGiam" />
        <span asp-validation-for="SoTienGiam" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label for="TrangThai" class="form-label">Trạng thái</label>
        <select id="TrangThai" name="TrangThai" class="form-select">
            <option value="true" selected="@(Model.TrangThai == true)">Đang áp dụng</option>
            <option value="false" selected="@(Model.TrangThai == true)">Ngưng áp dụng</option>
        </select>
        <span asp-validation-for="TrangThai" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success w-100">💾 Lưu thay đổi</button>
    </div>

    <div class="col-12">
        <a asp-action="Index" class="btn btn-secondary w-100">↩️ Quay lại</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
